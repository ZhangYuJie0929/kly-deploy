[global]
        workgroup = MYGROUP
        netbios name = MYSERVER
        server string = Samba Server Version %v
        log file = /var/log/samba/log.%m
        max log size = 50
        security = user
        passdb backend = tdbsam
        load printers = yes
        cups options = raw
        dfree command = {{ fsd_cloud_disk_root_path }}/samba/diskSize.sh

[shareA]
        path = {{ fsd_cloud_disk_root_path }}/
        browsable = yes
        read only = no
        inherit permissions = yes
        valid users = {{ samba_user }}
        writable = yes
        available = yes
        create mask = 0777
        directory mask = 0777

[shareA-read]
        path = {{ fsd_cloud_disk_root_path }}
        browsable = yes
        read only = yes
        inherit permissions = yes
        valid users = {{ samba_user }}
        writable = no
        available = yes
        create mask = 0777
        directory mask = 0777
